  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const music = document.getElementById('background-music');
      const panels = [
        document.getElementById('panel-intro'),
        document.getElementById('panel-1'),
        document.getElementById('panel-2'),
        document.getElementById('panel-3'),
        document.getElementById('panel-4'),
        document.getElementById('panel-5'),
        document.getElementById('panel-final')
      ];
      const startButton = document.getElementById('start-button');
      let currentIndex = 0;

      function showPanel(index) {
        panels.forEach((panel, i) => {
          panel.style.display = (i === index) ? 'flex' : 'none';
        });
      }

      function next() {
        if (currentIndex < panels.length - 1) {
          currentIndex++;
          showPanel(currentIndex);
        }
      }

      // Inicia la música y la secuencia de paneles
      startButton.addEventListener('click', (event) => {
        event.stopPropagation();
        // Inicia la música
        music.play().catch(error => console.log("La reproducción automática fue bloqueada por el navegador."));
        next();
      });

      // Permite avanzar haciendo click en cualquier parte de la pantalla
      document.body.addEventListener('click', (event) => {
        if (currentIndex > 0 && event.target.tagName !== 'BUTTON') {
          next();
        }
      });
    });
  </script>

